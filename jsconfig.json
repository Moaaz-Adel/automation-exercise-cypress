{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "jsx": "react",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "paths": {
      "@fixtures/*": ["cypress/fixtures/*"], // Specifically map to the fixtures folder
      "@support/*": ["cypress/support/*"] // Specifically map to the support folder
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
